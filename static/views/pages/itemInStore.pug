extends ../layout.pug

block prepend styles
  link(rel='stylesheet' href='//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css')

block content
  div(class='breadcrumb')
    li= title
  form(id='itemInStore-add-form' name='itemInStore-add-form' class='form-inline' action='')
    div(class='form-group')
      div(class='col-md-3')
        label(for='name') StoreId
      div(class='col-md-9')
        input(id='storeId' name='storeId' value='' class='form-control')
    div(class='form-group')
      div(class='col-md-3')
        label(for='name') ItemId
      div(class='col-md-9')
        input(id='itemId' name='itemId' value='' class='form-control')        
    div(class='form-group')
      div(class='col-md-12')
        button(type='submit' class='btn btn-primary') Create


  form(id='itemInStore-update-form' name='itemInStore-update-form' class='form-inline' action='')      
    div(class='form-group')
      div(class='col-md-12')
        button(type='submit' class='btn btn-secondary') Update

    div.list-wrapper
      table(id='itemInStore-list')
block append scripts
  script(src='/static/js/models/itemInStore.js')
  script(src='//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js')
  script(src='/static/js/views/itemInStore.js')